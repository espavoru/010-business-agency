extends ../pug/layout.pug

append config
  -
    currentTitle = 'Business Agency'
    currentDescription = 'Website'
    currentUrl = 'index.html'

block header
  nav.navbar
    +logo('#')
      span C
      |ode
      span A
      |nd
      span C
      |reate

    .navbar__list
      a.navbar__link(href='#') Home
      a.navbar__link(href='#') About
